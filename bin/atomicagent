#!/usr/bin/env node

const program = require('commander')

const pkg = require('../package.json')
const atomicAgent = require('../')

program
  .version(pkg.version)
  .option('-u, --ui', 'Enable Agent UI')
  .option('-p, --port <port>', 'Application port', 9898)
  .option('--btc-rpc <url>', 'Bitcoin RPC endpoint', 'http://localhost:18332')
  .option('--btc-rpc-user <user>', 'Bitcoin RPC user', 'bitcoin')
  .option('--btc-rpc-pass <pass>', 'Bitcoin RPC pass,', 'local321')
  .option('--eth-rpc <url>', 'Ethereum RPC endpoint', 'http://localhost:8545')
  .option('--eth-rpc-user <user>', 'Ethereum RPC user')
  .option('--eth-rpc-pass <pass>', 'Ethereum RPC pass')
  .parse(process.argv)

atomicAgent(program)
